FROM fluent/fluentd:v1.14-1

# Оновлюємо Ruby до останньої версії
USER root
RUN apt-get update && \
    apt-get install -y ruby-full && \
    ruby -v  # Перевірка версії Ruby

# Встановлюємо плагін fluent-plugin-elasticsearch
RUN gem install fluent-plugin-elasticsearch -v 5.0.3 --no-document

USER fluent
